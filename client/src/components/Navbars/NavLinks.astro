---
interface Props {
  navHeader: string;
  navHref: string;
}
const navHeader = Astro.props.navHeader;
const navHref = Astro.props.navHref;
const isCurrent = Astro.url.pathname.endsWith(navHref);
---

<div>
  <a
    href={navHref}
    aria-current={isCurrent ? "page" : "false"}
    class:list={[
      " font-medium text-[16px] 2xl:text-lg hover:scale-105 capitalize dark:hover:bg-rose-900 hover:bg-slate-200 px-3 py-2 rounded-full transition-transform transition-shadow hover:shadow-md hover:shadow-fuchsia-900/30 dark:hover:shadow-slate-900/30",
      isCurrent ? "shadow-md shadow-slate-900/40 dark:shadow-slate-900/50" : "",
    ]}>{navHeader}</a
  >
</div>
