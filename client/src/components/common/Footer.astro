---
import { AiFillGithub, AiFillYoutube, AiFillLinkedin } from "react-icons/ai/index.js";
import { SiDiscord, SiTwitch } from "react-icons/si/index.js";
interface Props {
  showLinks?: boolean;
}
const { showLinks = true } = Astro.props;
const date = new Date().getFullYear();
---

<div class="mt-8 md:mt-20 px-6 md:px-10 lg:px-60 2xl:px-72 flex flex-col justify-center items-start relative">
  <!-- to top button -->
  <a
    href=""
    class="hidden lg:block absolute right-6 md:right-10 lg:right-60 2xl:right-72 top-[50%] p-2 bg-blue-900 rounded-full hover:animate-spin"
    ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
      <path
        fill-rule="evenodd"
        d="M11.47 4.72a.75.75 0 011.06 0l7.5 7.5a.75.75 0 11-1.06 1.06L12 6.31l-6.97 6.97a.75.75 0 01-1.06-1.06l7.5-7.5zm.53 7.59l-6.97 6.97a.75.75 0 01-1.06-1.06l7.5-7.5a.75.75 0 011.06 0l7.5 7.5a.75.75 0 11-1.06 1.06L12 12.31z"
        clip-rule="evenodd"></path>
    </svg>
  </a>

  <div
    class="mt-8 h-[3px] rounded-full bg-gradient-to-r from-rose-500 to-fuchsia-500 dark:from-blue-600 dark:to-orange-500 w-full"
  >
  </div>
  <div
    class:list={[
      "flex-row flex-wrap gap-8 lg:gap-6 mt-8 lg:mt-10 justify-center items-center",
      showLinks ? "flex" : "hidden",
    ]}
  >
    <a
      class="flex flex-row gap-2 shadow-md shadow-slate-800/30 dark:shadow-indigo-500/20 justify-center font-normal md:font-medium items-center px-3 p-2 rounded-lg bg-indigo-200 dark:bg-slate-800 hover:outline outline-2 outline-fuchsia-800 cursor-pointer dark:outline-violet-500"
      target="_blank"
      rel="noreferrer"
      href="https://github.com/jsvigneshkanna"
    >
      <AiFillGithub size={24} /> Github
    </a>
    <a
      class="flex flex-row gap-2 justify-center shadow-md shadow-slate-800/30 dark:shadow-indigo-500/20 font-normal md:font-medium items-center px-3 p-2 rounded-lg bg-indigo-200 dark:bg-slate-800 hover:outline outline-2 outline-fuchsia-800 cursor-pointer dark:outline-violet-500"
      target="_blank"
      rel="noreferrer"
      href="https://www.youtube.com/@vkdotdev"
    >
      <AiFillYoutube size={24} /> Youtube
    </a>
    <a
      class="flex flex-row gap-2 justify-center shadow-md shadow-slate-800/30 dark:shadow-indigo-500/20 font-normal md:font-medium items-center px-3 p-2 rounded-lg bg-indigo-200 dark:bg-slate-800 hover:outline outline-2 outline-fuchsia-800 cursor-pointer dark:outline-violet-500"
      target="_blank"
      rel="noreferrer"
      href="https://discord.gg/EBhuUECQBQ"
    >
      <SiDiscord size={24} /> Discord
    </a>
    <a
      class="flex flex-row gap-2 justify-center shadow-md shadow-slate-800/30 dark:shadow-indigo-500/20 font-normal md:font-medium items-center px-3 p-2 rounded-lg bg-indigo-200 dark:bg-slate-800 hover:outline outline-2 outline-fuchsia-800 cursor-pointer dark:outline-violet-500"
      target="_blank"
      rel="noreferrer"
      href="https://www.linkedin.com/in/jsvigneshkanna/"
    >
      <AiFillLinkedin size={24} /> LinkedIn
    </a>
    <a
      class="flex flex-row gap-2 justify-center shadow-md shadow-slate-800/30 dark:shadow-indigo-500/20 font-normal md:font-medium items-center px-3 p-2 rounded-lg bg-indigo-200 dark:bg-slate-800 hover:outline outline-2 outline-fuchsia-800 cursor-pointer dark:outline-violet-500"
      target="_blank"
      rel="noreferrer"
      href="https://www.twitch.tv/jsvigneshkanna"
    >
      <SiTwitch size={24} /> Twitch
    </a>
  </div>
  <p class="mt-7 md:mt-4 text-cyan-700 dark:text-yellow-400 tracking-widest font-medium text-base lg:text-lg">
    ¬© J S Vignesh Kanna {date}
  </p>
  <p class="mt-1 text-slate-800 dark:text-slate-300 font-medium text-sm lg:text-base">
    ‚öíÔ∏è Build with Astro build, tailwindCSS, TypeScript and deployed in vercel
  </p>
  <p class="mt-1 text-slate-800 dark:text-slate-300 font-medium text-sm lg:text-base">üëÄ I don't track you</p>
  <div class="flex justify-center items-center lg:hidden w-full mt-8 flex-col">
    <a href="" class="p-2 bg-blue-900 rounded-full hover:animate-spin"
      ><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          fill-rule="evenodd"
          d="M11.47 4.72a.75.75 0 011.06 0l7.5 7.5a.75.75 0 11-1.06 1.06L12 6.31l-6.97 6.97a.75.75 0 01-1.06-1.06l7.5-7.5zm.53 7.59l-6.97 6.97a.75.75 0 01-1.06-1.06l7.5-7.5a.75.75 0 011.06 0l7.5 7.5a.75.75 0 11-1.06 1.06L12 12.31z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
    <p class="text-sm tracking-widest">To Top</p>
  </div>
</div>
