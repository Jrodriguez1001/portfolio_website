---
import DarkModeToggle from "./darkModeToggle";
import NavLink from "./NavLinks.astro";

const navLinks = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Blog",
    href: "/blogs",
  },
  {
    name: "Projects",
    href: "/projects",
  },
  {
    name: "Contact Me",
    href: "/contact",
  },
];
---

<div class="flex justify-between items-center bg-gradient-to-r from-blue-200 to-cyan-300 dark:bg-gradient-to-r dark:from-indigo-700 dark:to-cyan-800 shadow-md shadow-slate-400 dark:shadow-blue-700/75 px-4 md:px-72 py-3">
  {/* Left navlinks */}
  <div class="flex justify-center items-center gap-6 ">
    {
        navLinks.map((navLink) => <NavLink navHeader={navLink["name"]} navHref={navLink["href"]} />)
    }
  </div>
  {/* theme toggler */}
  <DarkModeToggle client:visible />
</div>
