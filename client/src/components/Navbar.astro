---
import DarkModeToggle from "./darkModeToggle";
import NavLink from "./NavLinks.astro";

const navLinks = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Blog",
    href: "/blogs",
  },
  {
    name: "Projects",
    href: "/projects",
  },
  {
    name: "Contact Me",
    href: "/contact",
  },
];
---

<div class="flex justify-between items-center bg-blue-200/90 dark:bg-blue-700/90 shadow-md shadow-slate-400 dark:shadow-slate-700/75 px-4 md:px-72 py-3">
  {/* Left navlinks */}
  <div class="flex justify-center items-center gap-6 ">
    {
        navLinks.map((navLink) => <NavLink navHeader={navLink["name"]} navHref={navLink["href"]} />)
    }
  </div>
  {/* theme toggler */}
  <DarkModeToggle client:visible />
</div>