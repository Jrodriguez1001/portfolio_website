<div class="px-6 md:px-10 lg:px-60 2xl:px-72 mt-24 flex flex-col justify-center items-center relative">
  <h3 class="text-lg lg:text-xl font-medium text-indigo-600 dark:text-blue-500 mb-4">Send me a message</h3>
  <form class="w-[90%] md:w-[50%] flex flex-col justify-center items-center gap-2">
    <label for="name" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"></label>
    <div class="relative w-full">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
          ></path>
        </svg>
      </div>
      <input
        type="text"
        id="name"
        class="block w-full p-4 pl-10 text-sm outline-none text-gray-900 border border-b-4 border-b-indigo-500 dark:border-b-rose-500 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        placeholder="Enter your name"
        required
      />
    </div>

    <label for="email" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"></label>
    <div class="relative w-full">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
          ></path>
        </svg>
      </div>
      <input
        type="email"
        id="email"
        class="block w-full p-4 pl-10 text-sm outline-none text-gray-900 border border-b-4 border-b-indigo-500 dark:border-b-rose-500 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        placeholder="Enter your email id"
        required
      />
    </div>

    <input
      type="text"
      id="message"
      placeholder="Enter you message for me"
      class="block w-full p-4 text-gray-900 border border-b-4 border-b-indigo-500 dark:border-b-rose-500 rounded-lg bg-gray-50 sm:text-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    />

    <button class="mt-6 px-4 py-2 bg-indigo-200 dark:bg-slate-700 rounded-lg">Send message</button>
  </form>
</div>
